<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sessions_header_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_background"
    android:padding="10dip">

    <ImageView
        android:id="@+id/sources_header_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_database_primary_24dp"/>

    <TextView
        android:id="@+id/sources_header_descriptiontext"
        style="@style/GPTextViewStyle"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/sources_header_image"
        android:paddingLeft="5dp"
        android:text="folderpath"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>