<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <GridLayout
                android:id="@+id/lineWidthDialogGridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:useDefaultMargins="true">

                <TextView
                    android:id="@+id/title1"
                    style="@style/GPTitleTextViewStyle"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_marginTop="10dp"
                    android:layout_row="0"
                    android:text="Stroke width" />

                <ImageView
                    android:id="@+id/widthImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="1"
                    android:contentDescription="Set line width" />

                <TextView
                    android:id="@+id/widthTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <SeekBar
                    android:id="@+id/widthSeekBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="2"
                    android:max="50" />
            </GridLayout>

            <GridLayout
                android:id="@+id/colorDialogGridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:useDefaultMargins="true">

                <TextView
                    android:id="@+id/title2"
                    style="@style/GPTitleTextViewStyle"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_marginTop="10dp"
                    android:layout_row="0"
                    android:text="" />

                <LinearLayout
                    android:id="@+id/radioDoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_row="1"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/radioDo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/doFillRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="fill"
                            android:textColor="?attr/colorPrimary" />

                        <RadioButton
                            android:id="@+id/doStrokeRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="stroke"
                            android:textColor="?attr/colorPrimary" />
                    </RadioGroup>
                </LinearLayout>

                <View
                    android:id="@+id/colorView"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="2" />

                <View
                    android:id="@+id/filler"
                    android:layout_width="wrap_content"
                    android:layout_height="4dp"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="3" />

                <TableLayout
                    android:id="@+id/dashboardLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_row="4"
                    android:columnCount="7"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/min_touch_size"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/c1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1"
                            android:background="?attr/colorAccent" />

                        <Button
                            android:id="@+id/c2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/c3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="2"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/c4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="3"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/c5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="4"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/c6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="5"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/c7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="6"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/min_touch_size"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/c8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                        <View
                            android:id="@+id/c9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                        <View
                            android:id="@+id/c10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="2"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                        <View
                            android:id="@+id/c11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="3"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                        <View
                            android:id="@+id/c12"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="4"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                        <View
                            android:id="@+id/c13"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="5"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                        <View
                            android:id="@+id/c14"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="6"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/min_touch_size"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/c15"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                        <View
                            android:id="@+id/c16"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                        <View
                            android:id="@+id/c17"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="2"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                        <View
                            android:id="@+id/c18"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="3"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                        <View
                            android:id="@+id/c19"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="4"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                        <View
                            android:id="@+id/c20"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="5"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                        <View
                            android:id="@+id/c21"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="6"
                            android:layout_gravity="fill_horizontal"
                            android:layout_weight="1" />

                    </TableRow>
                </TableLayout>

                <!--<GridLayout-->
                <!--android:id="@+id/availableColors"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_columnSpan="2"-->
                <!--android:layout_row="4"-->
                <!--android:columnCount="7"-->
                <!--android:orientation="vertical"-->
                <!--android:paddingBottom="@dimen/activity_vertical_margin"-->
                <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
                <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
                <!--android:paddingTop="@dimen/activity_vertical_margin"-->
                <!--android:useDefaultMargins="true"></GridLayout>-->

                <TextView
                    android:id="@+id/alphaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|right"
                    android:layout_row="5"
                    android:text="@string/label_alpha" />

                <SeekBar
                    android:id="@+id/alphaSeekBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="5"
                    android:max="255" />

                <TextView
                    android:id="@+id/redTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|right"
                    android:layout_row="6"
                    android:text="@string/label_red" />

                <SeekBar
                    android:id="@+id/redSeekBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="6"
                    android:max="255" />

                <TextView
                    android:id="@+id/greenTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|right"
                    android:layout_row="7"
                    android:text="@string/label_green" />

                <SeekBar
                    android:id="@+id/greenSeekBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="7"
                    android:max="255" />

                <TextView
                    android:id="@+id/blueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|right"
                    android:layout_row="8"
                    android:text="@string/label_blue" />

                <SeekBar
                    android:id="@+id/blueSeekBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="8"
                    android:max="255" />


            </GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>