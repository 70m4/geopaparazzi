<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/errorToggleLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:background="#FF0000"
            android:paddingBottom="7dp"
            android:paddingTop="7dp" >

            <ToggleButton
                android:id="@+id/errorToggleButton"
                style="@style/GPMediumButton"
                android:textOff="E"
                android:textOn="E" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gpsToggleLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/errorToggleLayout">

            <ToggleButton
                android:id="@+id/gpsToggleButton"
                style="@style/GPMediumButton"
                android:textOff="G"
                android:textOn="G" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/infoToggleLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:layout_below="@+id/gpsToggleLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ToggleButton
                android:id="@+id/infoToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="I"
                android:textOn="I" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkToggleLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/infoToggleLayout"
            android:background="#FF0000"
            android:paddingBottom="7dp"
            android:paddingTop="7dp" >

            <ToggleButton
                android:id="@+id/checkToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="CH"
                android:textOn="CH" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/anomalieToggleLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:layout_below="@+id/checkToggleLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ToggleButton
                android:id="@+id/anomalieToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="A"
                android:textOn="A" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/memoryToggleLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:layout_below="@+id/anomalieToggleLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ToggleButton
                android:id="@+id/memoryToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="M"
                android:textOn="M" />
        </LinearLayout>

        <Button
            android:id="@+id/refreshButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/memoryToggleLayout"
            android:text="Refresh" />

        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_background"
            android:cacheColorHint="#00000000"
            android:layout_below="@+id/refreshButton"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <TextView
        android:id="@android:id/empty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_data" />

</LinearLayout>