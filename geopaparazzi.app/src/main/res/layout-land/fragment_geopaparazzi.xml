<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_geopaparazzi"
    tools:context=".fragments.GeopaparazziActivityFragment"
    android:orientation="vertical"
    android:id="@+id/dashboardLayout">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dashboardButtonNotes"
            android:layout_column="0"
            style="@style/AppTheme.Button.Colored"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/dashboard_notes"
            android:contentDescription="Add notes" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dashboardButtonMetadata"
            android:layout_column="1"
            style="@style/AppTheme.Button.Colored"
            android:textColor="@color/main_text_color"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/dashboard_metadata"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dashboardButtonGpslog"
            android:layout_column="2"
            style="@style/AppTheme.Button.Colored"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/dashboard_gpslog"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dashboardButtonMapview"
            android:layout_column="0"
            style="@style/AppTheme.Button.Colored"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/dashboard_mapview"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dashboardButtonImport"
            android:layout_column="1"
            style="@style/AppTheme.Button.Colored"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/dashboard_import"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dashboardButtonExport"
            android:layout_column="2"
            style="@style/AppTheme.Button.Colored"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/dashboard_export"/>
    </TableRow>

</TableLayout>
