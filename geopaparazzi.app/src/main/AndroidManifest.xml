    <application
        android:name=".GeopaparazziApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/GeopapTheme">
        <activity
            android:name=".GeopaparazziActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/GeopapTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <!--<category android:name="android.intent.category.BROWSABLE" />-->

                <data android:mimeType="*/*" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.gpap" />
                <data android:scheme="file" />
            </intent-filter>
            <!--<intent-filter>-->
                <!--<data-->
                    <!--android:host="maps.google.com"-->
                    <!--android:scheme="http" />-->

                <!--<action android:name="android.intent.action.VIEW" />-->

                <!--<category android:name="android.intent.category.DEFAULT" />-->
                <!--<category android:name="android.intent.category.BROWSABLE" />-->
            <!--</intent-filter>-->
            <!--<intent-filter>-->
                <!--<data-->
                    <!--android:host="www.openstreetmap.org"-->
                    <!--android:scheme="http" />-->

                <!--<action android:name="android.intent.action.VIEW" />-->

                <!--<category android:name="android.intent.category.DEFAULT" />-->
                <!--<category android:name="android.intent.category.BROWSABLE" />-->
            <!--</intent-filter>-->
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName=".GeopaparazziActivity"
            android:theme="@style/GeopapTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GeopaparazziActivity" />
        </activity>
        <activity
            android:name=".activities.AboutActivity"
            android:label="@string/about"
            android:parentActivityName=".GeopaparazziActivity"
            android:theme="@style/GeopapTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GeopaparazziActivity" />
        </activity>
        <activity
            android:name=".providers.ProviderTestActivity"
            android:label="Available Source Urls List"
            android:parentActivityName=".GeopaparazziActivity"
            android:theme="@style/GeopapTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GeopaparazziActivity" />
        </activity>
        <activity
            android:name=".activities.PanicActivity"
            android:label="@string/panic"
            android:parentActivityName=".GeopaparazziActivity"
            android:theme="@style/GeopapTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GeopaparazziActivity" />>
        </activity>
        <activity
            android:name=".activities.ProjectMetadataActivity"
            android:label="@string/project_info"
            android:parentActivityName=".GeopaparazziActivity"
            android:theme="@style/GeopapTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GeopaparazziActivity" />>
        </activity>

        <activity
            android:name=".activities.AdvancedSettingsActivity"
            android:label="@string/action_advanced_settings"
            android:parentActivityName=".GeopaparazziActivity"
            android:theme="@style/GeopapTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GeopaparazziActivity" />
        </activity>

        <activity
            android:name=".activities.SqlViewActivity"
            android:label="@string/sqlview"
            android:parentActivityName=".activities.AdvancedSettingsActivity"
            android:theme="@style/GeopapTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.AdvancedSettingsActivity" />
        </activity>

        <activity android:name="eu.geopaparazzi.library.core.activities.LogAnalysisActivity" />

        <activity
            android:name="eu.geopaparazzi.library.core.activities.DatabaseListActivity"
            android:label="@string/query_results"
            android:parentActivityName=".activities.SqlViewActivity"
            android:theme="@style/GeopapTheme.NoActionBar" />

        <activity
            android:name=".activities.ExportActivity"
            android:label="@string/export_uc"
            android:parentActivityName=".GeopaparazziActivity"
            android:theme="@style/GeopapTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GeopaparazziActivity" />
        </activity>

        <activity
            android:name=".activities.ImportActivity"
            android:label="@string/import_uc"
            android:parentActivityName=".GeopaparazziActivity"
            android:theme="@style/GeopapTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GeopaparazziActivity" />
        </activity>

        <activity android:name=".activities.GpxImportActivity">
            <intent-filter>
                <action android:name="eu.hydrologis.geopaparazzi.gpx.GPXIMPORT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.tantomapurls.TantoMapurlsActivity"
            android:theme="@style/GeopapTheme.NoActionBar" />
        <activity
            android:name=".activities.tantomapurls.TantoMapurlsListActivity"
            android:theme="@style/GeopapTheme.NoActionBar" />


        <provider
            android:name=".providers.SourceUrlsContentProvider"
            android:authorities="eu.geopaparazzi.provider.sourceurls"
            android:enabled="true"
            android:exported="false" />

        <service android:name="eu.geopaparazzi.library.gps.GpsService" />
        <!-- <service android:name="eu.hydrologis.geopaparazzi.maps.MapsSupportService" /> -->
    </application>

</manifest>
