<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="@dimen/dashboard_button_width" 
	android:id="@+id/button_layout"
	android:orientation="vertical" 
	android:layout_height="@dimen/dashboard_button_height"
	android:gravity="center_horizontal" 
	>
	<ImageButton android:id="@+id/dashboard_item_image"
		android:layout_height="fill_parent" android:padding="@dimen/dashboard_button_padding"
		android:layout_weight="1" android:layout_width="wrap_content"
		android:background="@drawable/action_bar_button_drawable"></ImageButton>
	<TextView android:text="button" android:id="@+id/dashboard_item_text"
		android:layout_weight="2" android:padding="@dimen/dashboard_button_padding"
		android:layout_width="wrap_content" android:layout_height="fill_parent"></TextView>
</LinearLayout>
