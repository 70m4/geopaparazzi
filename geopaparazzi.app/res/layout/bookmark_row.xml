<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookmarksrowlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_background"
    android:padding="10dip" >

    <ImageView
        android:id="@+id/gobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="5dip"
        android:src="@drawable/ic_tab_goto_selected" />

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bookmarkrowtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/alertbutton"
        android:layout_toRightOf="@+id/gobutton"
        android:gravity="center_vertical"
        android:padding="5dip"
        android:scrollHorizontally="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/main_text_color_neutral" />

    <ImageView
        android:id="@+id/renamebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="5dip"
        android:src="@drawable/ic_tab_rename_selected" />

    <ImageView
        android:id="@+id/alertbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/renamebutton"
        android:layout_toLeftOf="@+id/renamebutton"
        android:padding="5dip"
        android:src="@drawable/ic_tab_alertsign_selected" />

</RelativeLayout>