<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMPORT"
        android:id="@+id/textView"
        android:layout_margin="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/main_text_color"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:background="@color/main_decorations" >
    </LinearLayout>

    <Button
        android:id="@+id/tantoMapurlsImportButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/button_indent"
        android:background="@drawable/button_background_drawable"
        android:padding="@dimen/button_indent"
        android:text="Mapurls"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/main_text_color" />

    <Button
        android:id="@+id/gpxImportButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/button_indent"
        android:background="@drawable/button_background_drawable"
        android:padding="@dimen/button_indent"
        android:text="GPX"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/main_text_color" />

    <Button
        android:id="@+id/cloudImportButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/button_indent"
        android:background="@drawable/button_background_drawable"
        android:padding="@dimen/button_indent"
        android:text="Geopaparazzi Browser"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/main_text_color" />

    <Button
        android:id="@+id/bookmarksImportButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/button_indent"
        android:background="@drawable/button_background_drawable"
        android:padding="@dimen/button_indent"
        android:text="Bookmarks"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/main_text_color" />

    <Button
        android:id="@+id/templatedatabaseImportButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/button_indent"
        android:background="@drawable/button_background_drawable"
        android:padding="@dimen/button_indent"
        android:text="Default Database"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/main_text_color" />

</LinearLayout>