<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="horizontal" android:background="@color/white">
	<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/mainupper" android:layout_weight="4"
		android:layout_gravity="top" android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:id="@+id/uppercol1"
			android:layout_gravity="left" android:gravity="right"
			android:background="#00000000" android:cacheColorHint="#00000000"
			android:orientation="horizontal" android:layout_weight="1">
		</LinearLayout>
		<TextView android:text="asdasd" android:id="@+id/compassInfoView"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:layout_gravity="left" android:gravity="right"
			android:background="#00000000" android:cacheColorHint="#00000000"
			android:paddingLeft="15px" android:paddingTop="15px"
			android:paddingRight="5px" android:layout_weight="1"></TextView>

	</FrameLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/mainlower"
		android:orientation="horizontal" android:layout_gravity="bottom"
		android:layout_weight="1">


		<Button android:text="@+id/photoButton" android:id="@+id/photoButton"
			android:layout_weight="1" style="@style/buttonFont"></Button>
		<!-- android:drawableTop="@drawable/camera" -->

		<eu.hydrologis.geopaparazzi.util.LogToggleButton
			android:text="@+id/logButton" android:id="@+id/logButton"
			android:layout_weight="1" style="@style/buttonFont"></eu.hydrologis.geopaparazzi.util.LogToggleButton>


		<Button android:text="@+id/noteButton" android:id="@+id/noteButton"
			android:layout_weight="1" style="@style/buttonFont"></Button>
		<!--android:drawableTop="@drawable/notes" -->

		<Button android:text="@+id/mapButton" android:id="@+id/mapButton"
			android:layout_weight="1" style="@style/buttonFont"></Button>
		<!-- android:drawableTop="@drawable/gmap" -->

	</LinearLayout>
</FrameLayout>
