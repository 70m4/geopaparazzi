<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="eu.hydrologis.geopaparazzi" android:versionCode="7" android:versionName="2.0.0RC4">
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:theme="@android:style/Theme.NoTitleBar">
		<activity android:label="@string/app_name"
			android:configChanges="orientation" android:name=".GeoPaparazziActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".camera.CameraActivity">
			<intent-filter>
				<action android:name="eu.hydrologis.geopaparazzi.camera.TAKE_PICTURE" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".compass.CompassActivity">
			<intent-filter>
				<action android:name="eu.hydrologis.geopaparazzi.compass.VIEW_COMPASS" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".gps.NoteActivity"
			android:configChanges="keyboardHidden|orientation">
			<intent-filter>
				<action android:name="eu.hydrologis.geopaparazzi.camera.TAKE_NOTE" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".maps.GpsDataPropertiesActivity">
			<intent-filter>
				<action android:name="eu.hydrologis.geopaparazzi.maps.GPSLOG_PROPERTIES" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".maps.GpsDataListActivity">
			<intent-filter>
				<action android:name="eu.hydrologis.geopaparazzi.maps.GPSLOG_DATALIST" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".maps.MapDataPropertiesActivity">
			<intent-filter>
				<action android:name="eu.hydrologis.geopaparazzi.maps.MAPDATAPROPERTIES" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".maps.MapDataListActivity">
			<intent-filter>
				<action android:name="eu.hydrologis.geopaparazzi.maps.MAPSDATALIST" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".maps.MapsActivity">
			<intent-filter>
				<action android:name="eu.hydrologis.geopaparazzi.maps.MAP_VIEW" />
